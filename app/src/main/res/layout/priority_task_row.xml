<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <ImageView
            android:id="@+id/ItemTaskPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/redp" />

        <TextView
            android:id="@+id/ItemTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            android:ellipsize="end"
            android:text="@string/task_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp" />

    <ImageView
        android:id="@+id/projectColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:longClickable="false"
        app:srcCompat="@drawable/red"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_alignTop="@+id/projectName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="100sp"
        android:layout_height="32sp"
        android:text="@string/project_name"
        android:layout_alignBottom="@+id/ItemTaskPriority"
        android:layout_toLeftOf="@+id/projectColor"
        android:layout_toStartOf="@+id/projectColor" />

</RelativeLayout>